{
    "version": 2,
    "functions": {
        "api/index.php": { "runtime": "vercel-php@0.5.2" }
    },
    "builds": [
        {
            "src": "composer.json",
            "use": "@vercel/php",
            "config": {
                "maxLambdaSize": "30mb"
            },
            "env": {
                "COMPOSER_CACHE_DIR": "/tmp/cache/composer"
            },
            "buildCommand": "composer install && npm run prod",
            "output": [
                {
                    "src": "public/index.php",
                    "dest": "/api/index.php"
                }
            ]
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/public/index.php"
        }
    ],

    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "APP_KEY": "base64:DIuxNeIH4OLfOzgV14+SI+CDiiGFnztXwyFSRq41Vgw=",
        "APP_URL": "https://alquranpro.com",

        "APP_CONFIG_CACHE": "/tmp/config.php",
        "APP_EVENTS_CACHE": "/tmp/events.php",
        "APP_PACKAGES_CACHE": "/tmp/packages.php",
        "APP_ROUTES_CACHE": "/tmp/routes.php",
        "APP_SERVICES_CACHE": "/tmp/services.php",
        "VIEW_COMPILED_PATH": "/tmp",

        "CACHE_DRIVER": "array",
        "LOG_CHANNEL": "stderr",
        "SESSION_DRIVER": "cookie"
    }
}
